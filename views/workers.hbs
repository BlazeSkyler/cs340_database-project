{{!-- insert worker --}}
<div id="insert">
    <h3>Add new worker</h3>
    <form id="add-worker-form-ajax">
        <fieldset>
            <label for="add-firstName">First Name</label> <input type="text" name="add-firstName" id="add-firstName" required>
            <label for="add-lastName">Last Name</label> <input type="text" name="add-lastName" id="add-lastName" required>
            <label for="add-email">Email</label> <input type="text" name="add-email" id="add-email">
            <label for="add-phoneNum">Phone #</label> <input type="text" name="add-phoneNum" id="add-phoneNum">
        </fieldset>
        <input type="submit" value="Add Worker">
        <input type="reset" class="cancel" value="Cancel">
    </form>
</div>

<script src="./js/add_worker.js"></script>

{{!-- display table --}}
<div id="display"></div>
    <h3>View workers</h3>
    <table id="workers-table">
        <thead>
            <tr>
                <th><button id="new-button">Add</button></th> 
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
            </tr>
        </thead>

        <tbody>
            {{#each data}}
            <tr>
                <td><button id="delete-button">Delete</button></td>
                <td align="center">{{this.workerID}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{checkNull this.email}}</td>
                <td align="center">{{checkNull this.phoneNum}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
