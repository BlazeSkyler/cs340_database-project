            <label for="cupcakeID">Cupcake ID</label> <select name="cupcakeID" id="cupcakeID">
                <option value="0">&nbsp;</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
            <label for="quantity">Quantity</label> <input type="number" name="quantity" id="quantity"><br>
        </fieldset> --}}
        {{!-- <p><input type="button" id="add-new-cupcakesordered" value="Add New"></p> --}}
        <input type="submit" value="Add Order">
        <input type="reset" class="cancel" value="Cancel">
    </form>
</div>

<script src="./js/add_order.js"></script>

{{!-- display orders --}}
<div id="display">
    <h3>View orders</h3>
    <table id="orders-table">
        <thead>
            <tr>
                <th><button id="new-button">Add</button></th> 
                {{#each data.[0]}}
                <th>{{@key}}</th>
                {{/each}}
            </tr>
        </thead>

        <tbody>
            {{#each data}}
            <tr>
                <td><button id="delete-button">Delete</button></td>
                <td align="center">{{this.orderID}}</td>
                <td align="center">{{this.customerID}}</td>
                <td align="center">{{checkNull this.workerID}}</td>
                <td align="center">{{dateFormat this.datePlaced}}</td>
                <td align="center">{{checkNull (dateFormat this.datePickedup)}}</td>
                <td align="right">{{this.totalPrice}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
