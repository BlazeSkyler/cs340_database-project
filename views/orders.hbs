{{!-- insert --}}
<div id="insert">
    <h3>Add new order</h3>
    <form id="add-order-form-ajax">
        <fieldset>
            <label for="add-customerID">Customer ID</label> <select name="add-customerID" id="add-customerID" required>
                <option value="">&nbsp;</option>
                {{#each customers}}
                <option value="{{this.customerID}}">{{this.customerID}}</option>
                {{/each}}
            </select>
            <label for="add-workerID">Worker ID</label> <select name="add-workerID" id="add-workerID">
                <option value="">None</option>
                {{#each workers}}
                <option value="{{this.workerID}}">{{this.workerID}}</option>
                {{/each}}
            </select>
            <label for="add-datePlaced">Date Placed</label> <input type="date" name="add-datePlaced" id="add-datePlaced" required>
            <label for="add-datePickedup">Date Pickedup</label> <input type="date" name="add-datePickedup" id="add-datePickedup" value="">
            <label for="add-totalPrice">Total Price</label> <input type="number" min="0" step=".01" name="add-totalPrice" id="add-totalPrice" required>
        </fieldset>
