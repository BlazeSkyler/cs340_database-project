{{!-- insert --}}
<div id="insert">
    <h3>Add new cupcakesOrdered</h3>
    <form id="add-cupcakesordered-form-ajax">
        <fieldset>
            <label for="orderID">Order ID</label> <select name="orderID" id="orderID">
                <option value="">&nbsp;</option>
                {{#each orders}}
                <option value="{{this.orderID}}">{{this.orderID}}</option>
                {{/each}}
            </select>
            <label for="cupcakeID">Cupcake ID</label> <select name="cupcakeID" id="cupcakeID">
                <option value="">&nbsp;</option>
                {{#each cupcakes}}
                <option value="{{this.cupcakeID}}">{{this.cupcakeID}}</option>
                {{/each}}
            </select>
            <label for="quantity">Quantity</label> <input type="number" min="1" name="quantity" id="quantity">
        </fieldset>
        <input type="submit" id="add-cupcakesOrdered-submit" value="Add CupcakesOrdered">
        <input type="button" class="cancel" value="Cancel">
    </form>
</div>

<script src="./js/add_cupcakesordered.js"></script>

<h3>View CupcakesOrdered</h3>
<table id="cupcakesordered-table">
    <thead>
        <tr>
            <th>Add</th> 
            <th></th>
            {{#each data.[0]}}
            <th>{{@key}}</th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>Edit</td>
            <td><a href="#" onclick="deleteCupcakesOrdered({{this.cupcakesOrderedID}})">Delete</a></td>
            <td align="center">{{this.cupcakesOrderedID}}</td>
            <td align="center">{{this.orderID}}</td>
            <td align="center">{{this.cupcakeID}}</td>
            <td align="right">{{this.quantity}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="./js/delete_cupcakesordered.js"></script>