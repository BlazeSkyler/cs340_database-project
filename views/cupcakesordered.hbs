{{!-- insert --}}
<div id="insert">
    <h3>Add new cupcakesOrdered</h3>
    <form id="add-cupcakesordered-form-ajax">
        <fieldset>
            <label for="add-orderID">Order ID</label> <select name="add-orderID" id="add-orderID" required>
                <option value="">&nbsp;</option>
                {{#each orders}}
                <option value="{{this.orderID}}">{{this.orderID}}</option>
                {{/each}}
            </select>
            <label for="add-cupcakeID">Cupcake ID</label> <select name="add-cupcakeID" id="add-cupcakeID" required>
                <option value="">&nbsp;</option>
                {{#each cupcakes}}
                <option value="{{this.cupcakeID}}">{{this.cupcakeID}}</option>
                {{/each}}
            </select>
            <label for="add-quantity">Quantity</label> <input type="number" min="1" name="add-quantity" id="add-quantity" required>
        </fieldset>
        <input type="submit" value="Add CupcakesOrdered">
        <input type="reset" class="cancel" value="Cancel">
    </form>
</div>

<script src="./js/add_cupcakesordered.js"></script>

{{!-- display --}}
<div id="display">
    <h3>View CupcakesOrdered</h3>
    <table id="cupcakesordered-table">
        <thead>
            <tr>
                <th><button id="new-button">Add</button></th> 
                {{#each data.[0]}}
                <th>{{@key}}</th>
                {{/each}}
            </tr>
        </thead>

        <tbody>
            {{#each data}}
            <tr>
                <td><button id="delete-button" onclick="deleteCupcakesOrdered({{this.cupcakesOrderedID}})">Delete</button></td>
                <td align="center">{{this.cupcakesOrderedID}}</td>
                <td align="center">{{this.orderID}}</td>
                <td align="center">{{this.cupcakeID}}</td>
                <td align="right">{{this.quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src="./js/delete_cupcakesordered.js"></script>

<div id="edit">
    <h3>Update Cupcakes in Order</h3>
    <form id="update-cupcakesordered-form-ajax">
        <fieldset>
            <label for="update-cupcakesOrderedID">Order ID</label> <select name="update-cupcakesOrderedID" id="update-cupcakesOrderedID">
                <option value="">&nbsp;</option>
                {{#each data}}
                <option value="{{this.cupcakesOrderedID}}">{{this.cupcakesOrderedID}}</option>
                {{/each}}
            </select>
            <label for="update-quantity">Quantity</label> <input type="number" min="1" name="update-quantity" id="update-quantity">
        </fieldset>
        <input type="submit" id="update-cupcakesOrdered-submit" value="Update CupcakesOrdered">
        <input type="reset" value="Cancel">
    </form>
</div>

<script src="./js/update_cupcakesordered.js"></script>